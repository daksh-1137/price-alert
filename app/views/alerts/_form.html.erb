  </div>

  <div>
    <%= form.label :target_price, style: "display: block" %>
    <%= form.text_field :target_price %>
  </div>

  <div>
    <%= form.label :status, style: "display: block" %>
    <%= form.text_field :status , value: :active %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
